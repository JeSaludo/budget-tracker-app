{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
        "ignore": [
        "node_modules"
        ]},
    "formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 120
		}
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	}
}
